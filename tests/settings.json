{
  "mode": "exe",
  "penalty_exitcode_nonzero": 0.75,
  "stdin": "/dev/null",
  "test_suites": {
    "tribonacci": {
      "tests": [
        { "desc": "n = 1",  "args": ["1"] },
        { "desc": "n = 2",  "args": ["2"] },
        { "desc": "n = 4",  "args": ["4"] },
        { "desc": "n = 7",  "args": ["7"] },
        { "desc": "n = 10", "args": ["10"] }
      ]
    },
    "recurse": {
      "tests": [
        { "desc": "n = 0",  "args": ["0"] },
        { "desc": "n = 2",  "args": ["2"] },
        { "desc": "n = 4",  "args": ["4"] },
        { "desc": "n = 7",  "args": ["7"] }
      ]
    },
    "plusminus": {
      "penalty_valgrind": 0.50,
      "tests": [
        { "desc": "One player",                     "args": ["tests/playerstats_input_0.txt"]},
        { "desc": "Two players, in order",          "args": ["tests/playerstats_input_1.txt"]},
        { "desc": "Two players, out of order",      "args": ["tests/playerstats_input_2.txt"]},
        { "desc": "Six players",                    "args": ["tests/playerstats_input_3.txt"]},
        { "desc": "Stop reading at DONE",           "args": ["tests/playerstats_input_4.txt"]},
        { "desc": "100 players",                    "args": ["tests/playerstats_input_5.txt"]}
      ]
    }
  }
}
